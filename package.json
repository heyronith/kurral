{
  "name": "dumbfeed",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "prebuild": "node -e \"try { require('@rollup/rollup-linux-x64-gnu'); } catch(e) { console.log('Installing rollup native dependency...'); require('child_process').execSync('npm install --no-save @rollup/rollup-linux-x64-gnu', {stdio: 'inherit'}); }\" || true",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules",
    "firebase:deploy:indexes": "firebase deploy --only firestore:indexes",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:setup": "bash scripts/deploy-firestore.sh",
    "test:auth": "node scripts/test-auth.js",
    "test:persistence": "node scripts/test-persistence.js",
    "test:news": "node scripts/test-news-generation.js",
    "test:personalized-news": "node scripts/test-personalized-news.js",
    "test:all": "bash scripts/test-all.sh"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@types/react-datepicker": "^6.2.0",
    "emoji-picker-react": "^4.15.1",
    "firebase": "^12.6.0",
    "openai": "^6.9.1",
    "react": "^18.2.0",
    "react-datepicker": "^8.9.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.6",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.4.5",
    "firebase-tools": "^13.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
